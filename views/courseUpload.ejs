<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Upload Course - Coursee Platform">
  <meta name="theme-color" content="#000000">
  <link rel="stylesheet" href="../css/style.css">
  <link rel="stylesheet" href="../css/courseUpload.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <title>Coursee</title>
</head>
<body>
  <nav>
    <div class="logo">
      <a href="/">Coursee</a>
    </div>
    <div class="links">
      <span><a href="/courses">Courses</a></span>
      <span><a href="/policy">Policy</a></span>
      <span><a href="/dashboard/<%= user.id %>"><i class="fa-user fa-solid"></i></a></span>
    </div>
  </nav>
  <%- include('./essentials/message') %>
  <section>
    <h2 id="uploadCourse">Upload Course</h2>
    <div class="upload-form">
      <form action="/upload/<%= user.id %>" method="post" enctype="multipart/form-data">
        <label for="title">Title:</label>
        <input type="text" name="title" id="title" maxlength="100">
        <label for="genre">Genre: </label>
        <input type="text" name="genre" id="genre" maxlength="50">
        <label for="pricing">Pricing:</label>
        <input type="number" name="pricing" id="pricing" maxlength="3">
        <label for="description">Description:</label>
        <textarea name="description" id="description"></textarea>
        <label for="description">About the writer:</label>
        <textarea name="aboutWriter" id="description"></textarea>
        <label for="upload-area">Upload Video here:</label>
        <input type="file" accept="video/*" name="uploadVideo" id="upload-area">
        <label for="thumbnail">Thumbnail:</label>
        <input type="file" accept="image/*" name="uploadThumbnail" id="thumbnail">
        <input type="submit" value="Upload">
        </div>
      </form>
    </div>
  </section>

  <footer>
    <span>Copyright &copy; 2025 || All rights reserved by coursee</span>
    <span>By Samip Tiwari</span>
  </footer>

  <script>
    document.querySelector('#thumbnail').addEventListener('change', () => {
      const file = this.file[0]
      if(file && file.size > 2 * 1024 * 1024){
        alert('Only 2 MB size of images can be uploaded!')
        this.value = '';
      } 
    })
  </script>
  <%- include('./essentials/messagejs') %>
</body>
</html>